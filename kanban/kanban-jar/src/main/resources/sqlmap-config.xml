<?xml version="1.0" encoding="UTF-8"?>  
<!DOCTYPE configuration PUBLIC     
    "-//mybatis.org//DTD Config 3.0//EN"    
    "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<!-- 设置支持属性驼峰式命名 -->
	<settings>
		<setting name="mapUnderscoreToCamelCase" value="true" />
	</settings>

	<!-- 设置于数据库对应的bean类 -->
	<typeAliases>
		<typeAlias alias="entry" type="net.thiki.kanban.domain.entry.Entry" />
        <typeAlias alias="task" type="net.thiki.kanban.domain.entry.Task" />
	</typeAliases>

	<!-- 设置数据库sql语句xml文件 -->
	<mappers>
		<!-- <mapper resource="/xxx.xml" /> -->
	</mappers>
</configuration>   
