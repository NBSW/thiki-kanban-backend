<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.thiki.kanban.task.TasksPersistence">

    <insert id="create" parameterType="org.thiki.kanban.task.Task">
        <selectKey resultType="java.lang.Integer" keyProperty="id" order="AFTER">
            SELECT @@IDENTITY
        </selectKey>
        INSERT INTO
        kb_task(summary, content, assignee, reporter, entry_id) VALUES (#{summary}, #{content}, #{assignee}, #{reporter}, #{entryId})
    </insert>

    <update id="update" parameterType="org.thiki.kanban.task.Task" flushCache="true">
        UPDATE kb_task SET
        summary = #{summary},
        content = #{content},
        assignee = #{assignee},
        reporter = #{reporter},
        entry_id = #{entryId}
        WHERE id=#{id}
    </update>

    <select id="findById" parameterType="java.lang.Integer" resultType="org.thiki.kanban.task.Task">
        SELECT * FROM kb_task WHERE id= #{id}
    </select>
    
    
    <select id="findByEntryId" parameterType="java.lang.Integer" resultType="org.thiki.kanban.task.Task">
        SELECT * FROM kb_task WHERE entry_id = #{id}
    </select>
<!-- 
    <delete id="deleteById" parameterType="java.lang.Integer" flushCache="true">
        UPDATE kb_entry SET deleteStatus=1 WHERE id=#{id}
    </delete> -->
</mapper>
