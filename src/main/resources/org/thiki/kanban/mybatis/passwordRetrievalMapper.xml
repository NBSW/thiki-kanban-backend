<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.thiki.kanban.passwordRetrieval.PasswordRetrievalPersistence">
    <insert id="createRecord" parameterType="org.thiki.kanban.passwordRetrieval.PasswordRetrieval">
        INSERT INTO
        kb_password_retrieval(id,email,verification_code) VALUES (#{id},#{email}, #{verificationCode})
    </insert>
    <select id="verify" parameterType="org.thiki.kanban.passwordRetrieval.PasswordRetrieval"
            resultType="org.thiki.kanban.passwordRetrieval.PasswordRetrieval">
        SELECT * FROM kb_password_retrieval WHERE delete_status=0 AND email=#{email} AND verification_code=#{verificationCode} AND is_verify_passed=0
    </select>

    <insert id="createPasswordResetApplication"
            parameterType="org.thiki.kanban.passwordRetrieval.PasswordResetApplication">
        INSERT INTO
        kb_password_reset(id,email) VALUES (#{id},#{email})
    </insert>

    <update id="resetPassword" parameterType="org.thiki.kanban.passwordRetrieval.PasswordReset" flushCache="true">
        UPDATE kb_user_registration SET password=#{password} WHERE email=#{email} AND delete_status=0
    </update>

    <update id="cleanResetPasswordRecord" parameterType="org.thiki.kanban.passwordRetrieval.PasswordReset"
            flushCache="true">
        UPDATE kb_password_reset SET is_reset=1 WHERE email=#{email} AND delete_status=0
    </update>

    <update id="passSecurityCodeVerification" parameterType="java.lang.String"
            flushCache="true">
        UPDATE kb_password_retrieval SET is_verify_passed=1 WHERE email=#{email} AND delete_status=0
    </update>
</mapper>
